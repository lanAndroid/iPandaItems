<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40px"
        android:layout_marginTop="40px"
        android:padding="20px"
        android:text="邮箱注册需要激活后才能登录"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120px"
        android:layout_marginLeft="60px"
        android:layout_marginRight="60px"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/edit_email"
            android:layout_width="match_parent"
            android:layout_height="120px"
            android:background="@drawable/pe_shape_border_gray"
            android:hint="账号：请输入邮箱"
            android:padding="15px"
            android:textColor="@color/gray"
            android:textColorHint="#c9c9c9"
            android:textCursorDrawable="@null"
            android:textSize="14sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/hint_emamil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60px"
        android:textColor="#f00" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120px"
        android:layout_marginLeft="60px"
        android:layout_marginRight="60px"
        android:layout_marginTop="30px"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/edit_passwrok"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/pe_shape_border_gray"
            android:hint="请输入密码"
            android:padding="15px"
            android:password="true"
            android:text=""
            android:textColor="@color/gray"
            android:textColorHint="#c9c9c9"
            android:textCursorDrawable="@null"
            android:textSize="14sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/hint_passwork"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60px"
        android:textColor="#f00" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120px"
        android:layout_marginLeft="60px"
        android:layout_marginRight="60px"
        android:layout_marginTop="30px"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/edit_again_password"
            android:layout_width="match_parent"
            android:layout_height="120px"
            android:background="@drawable/pe_shape_border_gray"
            android:hint="请确认密码"
            android:padding="15px"
            android:password="true"
            android:textColor="@color/gray"
            android:textColorHint="#c9c9c9"
            android:textCursorDrawable="@null"
            android:textSize="14sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/hint_again_passord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:textColor="#f00" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120px"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp">

        <EditText
            android:id="@+id/edit_yanzhengma"
            android:layout_width="match_parent"
            android:layout_height="120px"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/personal_reg_imgcheck"
            android:background="@drawable/pe_shape_border_gray"
            android:hint="请输入图片验证码"
            android:padding="15px"
            android:textColor="@color/gray"
            android:textColorHint="#c9c9c9"
            android:textCursorDrawable="@null"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/personal_reg_imgcheck"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30px"
            android:background="@color/white"
            android:gravity="center"
            android:text="图像验证码" />
    </RelativeLayout>

    <TextView
        android:id="@+id/hint_yanzhengma"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60px"
        android:textColor="#f00" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60px"
        android:layout_marginTop="30px">

        <CheckBox
            android:id="@+id/xieyi_check"
            android:layout_width="74px"
            android:layout_height="74px"
            android:layout_centerVertical="true"
            android:layout_marginRight="20px"
            android:background="@drawable/selector_check"
            android:button="@null"
            android:checked="true" />

        <TextView
            android:id="@+id/personal_reg_xieyi_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/xieyi_check"
            android:text="我已阅读并同意《央视网网络服务使用协议》"
            android:textColor="@color/colorPrimaryDark" />

        <TextView
            android:id="@+id/hint_xieyi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/xieyi_check"
            android:layout_below="@id/xieyi_check"
            android:layout_marginTop="20px"
            android:textColor="#f00" />
    </RelativeLayout>

    <TextView
        android:id="@+id/btn_register"
        android:layout_width="match_parent"
        android:layout_height="132px"
        android:layout_marginLeft="60px"
        android:layout_marginRight="60px"
        android:layout_marginTop="30px"
        android:background="@drawable/pe_login_view_bg"
        android:gravity="center"
        android:padding="30px"
        android:text="注册"
        android:textColor="@color/white" />
</LinearLayout>