<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    >
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:id="@+id/re"
        >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/fcb"
        android:text="Facebook"
        android:gravity="center_horizontal"
        android:id="@+id/face"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/twitter"
        android:text="Twitter"
        android:layout_toRightOf="@+id/face"
        android:gravity="center_horizontal"
        android:id="@+id/twi"
        />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/sinawebo"
            android:text="微博"
            android:layout_toRightOf="@+id/twi"
            android:gravity="center_horizontal"
            android:id="@+id/sina"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/re"
        android:layout_centerHorizontal="true"
        android:id="@+id/lin"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/wechat"
            android:text="微信"
            android:gravity="center_horizontal"
            android:id="@+id/wx"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/moments"
            android:text="朋友圈"
            android:gravity="center_horizontal"
            android:id="@+id/penyouquan"
            />
    </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lin"
        android:text="取消"
        android:id="@+id/btn_quxiao"
        />
</RelativeLayout>