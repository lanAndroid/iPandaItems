<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/play_continue_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40px"
        android:layout_marginLeft="50px"
        android:layout_marginRight="50px"
        android:layout_marginTop="40px"
        android:gravity="center_horizontal"
        android:text="您正在使用移动数据网络，所产生的流量费由当地运营商收取，是否继续？"
        android:textColor="#4B4B4B"
        android:textSize="50px" />

    <View
        android:layout_width="match_parent"
        android:layout_height="3px"
        android:background="#DDDDDD" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120px"
        android:background="@drawable/pe_dialog_tips_view_bg"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/play_continue_cancel"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/pe_dialog_tips_view_bg"
            android:gravity="center"
            android:text="取消"
            android:textColor="#4B4B4B"
            android:textSize="50px" />

        <View
            android:id="@+id/play_continue_fenge"
            android:layout_width="3px"

            android:layout_height="match_parent"
            android:background="#DDDDDD" />

        <TextView
            android:id="@+id/play_continue_sure"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="确定"
            android:textColor="#4B4B4B"
            android:textSize="50px" />
    </LinearLayout>

</LinearLayout>