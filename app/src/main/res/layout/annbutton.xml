<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/shell_brn1"
    android:orientation="horizontal"
    android:padding="10px">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/white">

        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/check_btn"
            android:button="@null"
            android:gravity="center"
            android:visibility="gone" />

        <RelativeLayout
            android:id="@+id/list_Re"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/checkBox"
            android:layout_toRightOf="@+id/checkBox"
            android:padding="20px">

            <ImageView
                android:id="@+id/list_Image"
                android:layout_width="400px"
                android:layout_height="250px"
                android:scaleType="fitXY"
                android:src="@drawable/_row1_3" />

            <TextView
                android:id="@+id/video_Length"
                android:layout_width="250px"
                android:layout_height="90px"
                android:layout_alignBottom="@+id/list_Image"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="20px"
                android:background="@drawable/lpanda_bottom_gra"
                android:drawableLeft="@drawable/play"
                android:padding="20px"
                android:textColor="@color/white" />
        </RelativeLayout>

        <TextView
            android:id="@+id/list_Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/list_Content"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/list_Content"
            android:layout_marginTop="20px"
            android:text="111"
            android:textSize="50px" />

        <TextView
            android:id="@+id/list_Content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/list_Re"
            android:layout_below="@+id/list_Name"
            android:layout_marginLeft="20px"
            android:layout_toEndOf="@+id/list_Re"
            android:layout_toRightOf="@+id/list_Re"
            android:gravity="center_vertical"
            android:text="111" />
    </RelativeLayout>
</RelativeLayout>