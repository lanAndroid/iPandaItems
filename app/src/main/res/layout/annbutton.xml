<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/shell_brn1"
    android:padding="10px"
    >
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/list_Re"
            android:padding="20px"
            >

    <ImageView
        android:layout_width="400px"
        android:layout_height="250px"
        android:id="@+id/list_Image"
        android:src="@mipmap/ic_launcher"
        android:scaleType="fitXY"
        />
            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
                android:drawableLeft="@drawable/play"
                android:layout_alignBottom="@+id/list_Image"
                android:layout_marginLeft="20px"
                android:layout_marginBottom="20px"
                android:id="@+id/video_Length"
                android:textColor="@color/white"
                />
        </RelativeLayout>
    <TextView
        android:id="@+id/list_Name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="111"
        android:layout_marginTop="20px"
        android:textSize="50px"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/list_Content"
        android:layout_alignStart="@+id/list_Content" />

    <TextView
            android:id="@+id/list_Content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="111"
        android:layout_marginLeft="20px"
        android:layout_alignBottom="@+id/list_Re"
        android:layout_toRightOf="@+id/list_Re"
        android:layout_toEndOf="@+id/list_Re"
        android:layout_below="@+id/list_Name"
        android:gravity="center_vertical"
        />
    </RelativeLayout>
</RelativeLayout>