<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/shell_brn1"
    android:orientation="vertical">

    <CheckBox
        android:id="@+id/bianji_btn"
        android:layout_width="match_parent"
        android:layout_height="60px"

        android:layout_marginRight="10dp"
        android:button="@null"
        android:gravity="center"
        android:text="编辑"
        android:textColor="@color/black" />

    <android.support.v7.widget.RecyclerView
    android:id="@+id/solive_recycler"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
        android:background="@color/white"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_above="@+id/histor_lin"
        android:layout_below="@+id/bianji_btn"></android.support.v7.widget.RecyclerView>

    <LinearLayout
        android:id="@+id/histor_lin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:visibility="gone">

        <CheckBox
            android:id="@+id/all_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/white"
            android:button="@null"
            android:gravity="center"
            android:text="全选" />

        <Button
            android:id="@+id/delete_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/white"
            android:text="删除" />

    </LinearLayout>
</RelativeLayout>